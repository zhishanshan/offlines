<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 头部 -->

    <RelativeLayout style="@style/title_bar_style" >

        <TextView
            android:id="@+id/wode_back"
            style="@style/back_view"
            android:text="返回" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@android:color/transparent" />
    <!-- 头像框 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/wode_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_default" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="远山黛"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wode_touxiang"
            android:layout_alignParentRight="true"
            android:text="点击登录"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>
 <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dcdcdc" />
    <LinearLayout
        android:id="@+id/person_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.22"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="个人信息"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hui_discount_item_rule_arrow" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dcdcdc" />
    
    <LinearLayout
        android:id="@+id/publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.22"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="发布"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hui_discount_item_rule_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dcdcdc" />
    
    <LinearLayout
        android:id="@+id/shoucang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.22"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hui_discount_item_rule_arrow" />
    </LinearLayout>

    
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dcdcdc" />
    <LinearLayout
        android:id="@+id/guanzhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.22"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="关注"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hui_discount_item_rule_arrow" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dcdcdc" />
    <LinearLayout
         android:id="@+id/shezhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.22"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:src="@drawable/hui_discount_item_rule_arrow" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dcdcdc" />
    <LinearLayout
         android:id="@+id/fankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.22"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="反馈"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:src="@drawable/hui_discount_item_rule_arrow" />
    </LinearLayout>
 <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#dcdcdc" />
</LinearLayout>