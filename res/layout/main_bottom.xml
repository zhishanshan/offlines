<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:layout_weight="0"
    android:background="#cccccc" >
    
   
        
        <RelativeLayout 
            android:id="@+id/dw_layout"
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1"
            >
            <LinearLayout 
              android:layout_height="wrap_content" 
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"  
                android:orientation="vertical"   >
                
                <ImageView 
                    android:id="@+id/dw_image"
                    android:layout_width="match_parent"  
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dw_unselected"
                    android:paddingLeft="30dp"
                    />
                <TextView 
                    android:id="@+id/dw_text"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_vertical"  
                    android:text="@string/main_bottom1" 
                    android:textSize="13sp" 
                    android:textColor="#333333"
                    android:paddingLeft="30dp"/>
            </LinearLayout>
        </RelativeLayout>
        <!-- 搜索imageview -->
        <RelativeLayout  
            android:id="@+id/sousuo_layout"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1" >  
  
            <LinearLayout  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:orientation="vertical" >  
  
                <ImageView  
                    android:id="@+id/sousuo_image"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_vertical"  
                    android:src="@drawable/sousuo_unselected" 
                    android:paddingLeft="25dp"/>  
  
                <TextView  
                    android:id="@+id/sousuo_text"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_vertical"  
                    android:text="@string/main_bottom2"  
                    android:textSize="13sp" 
                    android:textColor="#333333"
                    android:paddingLeft="30dp"/>  
            </LinearLayout>  
        </RelativeLayout>  
        
  <!-- 提醒imageview -->
          <RelativeLayout  
            android:id="@+id/tixing_layout"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1" >  
  
            <LinearLayout  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:orientation="vertical" >  
  
                <ImageView  
                    android:id="@+id/tixing_image"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_vertical"  
                    android:src="@drawable/tixing_unselected" 
                    android:paddingLeft="25dp"/>  
  
                <TextView  
                    android:id="@+id/tixing_text"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_vertical"  
                    android:text="@string/main_bottom3"  
                    android:textSize="13sp" 
                    android:textColor="#333333"
                    android:paddingLeft="30dp" />  
            </LinearLayout>  
        </RelativeLayout>   
         <!-- 我的imageview -->
        <RelativeLayout  
            android:id="@+id/wode_layout"  
            android:layout_width="0dp"  
            android:layout_height="match_parent"  
            android:layout_weight="1" >  
  
            <LinearLayout  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:orientation="vertical" >  
  
                <ImageView  
                    android:id="@+id/wode_image"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_vertical"  
                    android:src="@drawable/wode_unselected" 
                    android:paddingLeft="25dp"/>  
  
                <TextView  
                    android:id="@+id/wode_text"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_gravity="center_vertical"  
                    android:text="发布"  
                    android:textSize="13sp" 
                    android:textColor="#333333"
                    android:paddingLeft="30dp" />  
            </LinearLayout>  
        </RelativeLayout>  
  
      
        </LinearLayout> 
